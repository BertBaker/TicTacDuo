<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0"
    package="com.gmail.bertdbaker.tictacduo">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:theme="@style/PolarThemeLogo"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity
            android:name="com.gmail.bertdbaker.tictacduo.MainActivity"
            android:theme="@style/PolarThemeLogo"
            android:windowSoftInputMode="adjustPan">

            <intent-filter>

                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity
            android:name="com.gmail.bertdbaker.tictacduo.PlayPhone1" />

        <activity
            android:name="com.gmail.bertdbaker.tictacduo.PlayPhoneN" />

        <activity
            android:name="com.gmail.bertdbaker.tictacduo.PlaySharing" />

        <activity
            android:name="com.gmail.bertdbaker.tictacduo.PlayByAir" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
</manifest>
